<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generátor hesel s obrázkem</title>
  <style>
    body { 
      font-family: Arial, sans-serif; 
      text-align: center; 
      padding: 50px 20px; 
      max-width: 800px; 
      margin: 0 auto; 
    }
    #password-container {
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 20px 0;
    }
    #password { 
      font-size: 24px; 
      margin-right: 10px;
    }
    #image-container {
      margin-top: 20px;
      min-height: 300px;
    }
    #image { 
      max-width: 100%; 
      height: auto; 
      max-height: 400px;
    }
    .error { 
      color: red; 
    }
    button {
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      margin: 0 5px;
    }
  </style>
</head>
<body>
  <h1>Generátor hesel s obrázkem</h1>
  <div id="password-container">
    <div id="password"><%= password %></div>
    <button onclick="copyPassword()">Kopírovat heslo</button>
  </div>
  <button onclick="location.reload()">Generovat nové heslo a obrázek</button>
  <div id="image-container">
    <% if (imageUrl) { %>
      <img id="image" src="<%= imageUrl %>" alt="Náhodný obrázek" onerror="this.onerror=null;this.src='https://via.placeholder.com/400x300?text=Image+Not+Available';">
    <% } else { %>
      <p class="error">Nepodařilo se načíst obrázek. Zkuste to prosím znovu.</p>
    <% } %>
  </div>

  <script>
    function copyPassword() {
      const passwordElement = document.getElementById('password');
      const password = passwordElement.textContent;
      
      navigator.clipboard.writeText(password).then(function() {
        alert('Heslo bylo zkopírováno do schránky!');
      }, function(err) {
        console.error('Nepodařilo se zkopírovat heslo: ', err);
        alert('Nepodařilo se zkopírovat heslo. Zkuste to prosím znovu.');
      });
    }
  </script>
</body>
</html>